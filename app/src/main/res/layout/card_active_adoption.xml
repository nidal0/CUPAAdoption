<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="160dp"
    android:layout_height="250dp"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="10dp"
    app:layout_gravity="center"
    app:cardCornerRadius="5dp"
    android:elevation="6dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageaa"
            android:contentDescription="@string/imageaa"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/petname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            />

       <!-- <TextView
            android:id="@+id/petdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="This is supposed to be a brief description about the pet with read more click but this just dummy text for now."
            android:gravity="center"/> -->

        <View
            android:id="@+id/divideraa"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/centre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:textSize="10dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/moredetailsaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/moredetailsaa"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

</android.support.design.card.MaterialCardView>